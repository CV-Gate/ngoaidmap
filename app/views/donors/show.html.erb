<%= render 'partials/map' %>
<%= render 'partials/categories_selector' %>

<div class="main-content">
  <div class="row">
    <section class="layout-content grid-12 offset-1">

      <%= render 'partials/project_list_header', type: 'Donor', title: @donor.name, css_class: 'donor' %>

      <p class="disclaimer">The projects presented here are voluntarily provided by InterAction members and are not intended to be a complete representation of this donorâ€™s activities.</p>
      
      <%= render "partials/organization_details", organization: @donor %>

      <%= render "partials/index_projects" %>
      
      <%= render "partials/organization_media_resources", organization: @donor %>

    </section>

    <aside class="layout-sidebar grid-4">

      <!-- Highlighted results -->
      <div id="sidebar-highlights" class="mod-highlighted-results mod-info" data-highlights="[&#34;projects_count&#34;,&#34;countries_count&#34;]"></div>

      <!-- Projects locations -->
      <div id="sidebar-locations" class="mod-info"></div>

      <!-- Sectors by projects -->
      <div id="sidebar-sectors" class="project-sectors mod-info"></div>

      <!-- Projects reporting organizations -->
      <div id="sidebar-organizations" class="mod-info"></div>
      
      <% unless url_has_compound_filter %>
        <!-- Organization Sidebar -->
        <div id="sidebar-organization-resources" class="mod-info"></div>
        <div id="sidebar-organization-infocontact" class="mod-info"></div>
        <div id="sidebar-organization-mediacontact" class="mod-info"></div>
        <div id="sidebar-organization-followus" class="mod-info"></div>
      <% end %>

        <script>
            var organization = <%= raw(@donor.to_json) %>;
            var organization_resources = <%= raw(@donor.resources.to_json) %>;
        </script>
    </aside>
  </div>
</div>
