<%= render 'new_partials/map' %>

<%= render 'new_partials/categories_selector' %>

<div class="main-content">
  <div class="row">
    <div class="grid-4">
      <aside class="layout-sidebar">

        <!-- Highlighted results -->
        <div id="sidebar-highlights" class="mod-highlighted-results mod-info" data-rendercountries="true"></div>

        <!-- Projects locations -->
        <div id="sidebar-locations" class="mod-info"></div>

        <!-- Sectors by projects -->
        <div id="sidebar-sectors" class="project-sectors mod-info"></div>

        <script> var donor = <%= raw(@donor.to_json) %>; console.log('** donor **'); console.log(donor); console.log('** ********* **')</script>
      </aside>
    </div>

    <div class="grid-12 offset-1">
      <section class="layout-content">

        <header>
          <h1 id="title-donor" class="section-title" data-id="<%= @donor.id %>" data-name="<%= @donor.name.html_safe %>"><%= @donor.name.html_safe %></h1>
          <!-- <h1 class="section-title"><%#= clusters_sectors_projects_list_subtitle %></h1> -->
        </header>

        <p class="disclaimer"><%= params[:organization_id] ? "In some cases, this organization may be sub-recipient (rather than a direct recipient) of this donor's funding." : "The projects presented here are voluntarily provided by InterAction members and are not intended to be a complete representation of this donorâ€™s activities." %> </p>

        <%#= render :partial => 'new_partials/downloads', :locals => { :csv_path => organization_path(@organization, @carry_on_filters.merge(:format => :csv)), :xls_path => organization_path(@organization, @carry_on_filters.merge(:format => :xls)), :kml_path => organization_path(@organization, @carry_on_filters.merge(:format => :kml)) } %>

        <%= render "new_partials/index_projects" %>

      </section>
    </div>
  </div>
</div>
