<div class="contact-info">
  <h3>Contact information</h3>
  <div class="mod-contact-info">
    {{#if name}}<h4>{{name}}</h4>{{/if}}
    {{#if position}}<p>{{position}}</p>{{/if}}
    {{#if phone}}<p>{{phone}}</p>{{/if}}
    {{#if email }}<a href="mailto:{{email}}" class="donations-website">Contact e-mail address</a>{{/if}}
  </div>
</div>
